@model MyProject.Models.Order

@{
    ViewBag.Title = "DeleteShipment";
    Layout = "~/Areas/AdminPanel/Views/Shared/_adminLayout.cshtml";
}

    <div class="header">
        <div class="stats">
            <p class="stat"><span class="label label-info">5</span> In Process</p>
            <p class="stat"><span class="label label-success">27</span> Delivered</p>
            <p class="stat"><span class="label label-danger">15</span> In Way</p>
        </div>

        <h1 class="page-title">Delete Shipment</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a> </li>
            <li class="active">Delete Shipment</li>
        </ul>
    </div>


<div class="header">
    <h1 class="page-title">Are You Want To Delete This Shipment?</h1>
</div>

<div class="main-content">

    @using (Html.BeginForm("DeleteShipment", "Shipment", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.OrderId)
        <div class="row">
            <div class="col-md-6">
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane active in" id="home">
                        <div id="tab">
                            <div class="form-group">
                                H. Airway Bill #:  @Html.DisplayFor(x => x.AirWayBillNumberNumber)
                            </div>

                            <div class="form-group">
                                Shipper:  @Html.DisplayFor(x => x.Shipper_SenderNameAddress)
                            </div>


                            <div class="form-group">
                                Consignee:  @Html.DisplayFor(x => x.Consignee_ReceiverNameAddress)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="btn-toolbar list-toolbar">
                    <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Delete</button>
                    <a href="/AdminPanel/Shipment/AllShipment" class="btn btn-danger">Back</a>
                </div>
                <div class="modal-body">
                    <p class="error-text">@ViewBag.Message</p>
                </div>
            </div>
        </div>

    }
</div>


